# Openbridge Authentication
OPENBRIDGE_REFRESH_TOKEN=YOUR_REFRESH_TOKEN

# Optional: API timeout in seconds (default: 30, connect timeout fixed at 10)
OPENBRIDGE_API_TIMEOUT=30

# MCP Server Configuration
MCP_PORT=8000

# Query Validation (AI-powered) - Optional, requires explicit opt-in
# Enable LLM-based query validation (default: false, uses heuristics only)
OPENBRIDGE_ENABLE_LLM_VALIDATION=false

# If enabled, requires an API key for OpenAI
# Get your API key from: https://platform.openai.com/docs/api-reference/introduction
FASTMCP_SAMPLING_API_KEY=sk-proj-xxxxxxxxxxxxx
# or use OPENAI_API_KEY if you prefer
# OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxx

# Optional: Customize the model used for query validation (default: gpt-4o-mini)
# FASTMCP_SAMPLING_MODEL=gpt-4o-mini

# Optional: Use a custom OpenAI-compatible endpoint
# FASTMCP_SAMPLING_BASE_URL=https://api.openai.com/v1
